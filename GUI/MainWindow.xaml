<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:GUI.ViewModel"
        xmlns:views="clr-namespace:GUI.View"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>

            <DataTemplate DataType="{x:Type viewmodels:TenantViewModel}">
                <views:TenantView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:RentalViewModel}">
                <views:RentalView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:SaleViewModel}">
                <views:SaleView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:ItemViewModel}">
                <views:ItemView />
            </DataTemplate>

        </ContentControl.Resources>
    </ContentControl>

</Window>
