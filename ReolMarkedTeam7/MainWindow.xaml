<Window x:Class="ReolMarkedTeam7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ReolMarkedTeam7.View"
        Title="Reolmarkedet – medarbejder" Width="1100" Height="750" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- titel -->
            <RowDefinition Height="Auto"/>
            <!-- knapper -->
            <RowDefinition Height="*"/>
            <!-- indhold -->
        </Grid.RowDefinitions>

        <!-- Titel -->
        <Border Margin="12" Padding="10"
                BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Background="#F6F7F9">
            <TextBlock Text="Reolmarkedet – medarbejder" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Top-navigation -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="12,6,12,0">
            <Button Content="Varer"  Margin="0,0,6,0" Padding="16,6" Click="ShowItems"/>
            <Button Content="Reoler" Margin="0,0,6,0" Padding="16,6" Click="ShowShelves"/>
            <Button Content="Lejere" Margin="0,0,6,0" Padding="16,6" Click="ShowTenants"/>
            <Button Content="Salg"   Padding="16,6"      Click="ShowSales"/>
        </StackPanel>

        <!-- Host for sider -->
        <Border Grid.Row="2" Margin="12" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
            <ContentControl x:Name="MainHost"/>
        </Border>
    </Grid>
</Window>

