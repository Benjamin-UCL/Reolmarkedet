<UserControl x:Class="ReolMarkedTeam7.View.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="White" Height="489" Width="713">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- venstre menu -->
            <ColumnDefinition Width="*"/>
            <!-- indhold -->
        </Grid.ColumnDefinitions>

        <!-- VENSTRE: Navigation -->
        <Grid Grid.Column="0" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Margin="12,16,12,8" BorderBrush="Blue" BorderThickness="1" CornerRadius="6">
                <TextBlock Text="Administrer varer" Padding="12"
                           Background="WhiteSmoke" FontWeight="Bold"/>
            </Border>

            <Border Grid.Row="1" Margin="12,4" BorderBrush="Blue" BorderThickness="1" CornerRadius="6">
                <TextBlock Text="Administrer Lejere" Padding="12" Background="#EEE"/>
            </Border>

            <Border Grid.Row="2" Margin="12,4" BorderBrush="Blue" BorderThickness="1" CornerRadius="6">
                <TextBlock Text="Administrer Reoler" Padding="12" Background="WhiteSmoke" />
            </Border>

            <Border Grid.Row="3" Margin="12,4" BorderBrush="Blue" BorderThickness="1" CornerRadius="6">
                <TextBlock Text="Salg" Padding="12" Background="WhiteSmoke"/>
            </Border>
        </Grid>

        <!-- HØJRE: Indhold -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- header -->
                <RowDefinition Height="Auto"/>
                <!-- lille toolbar -->
                <RowDefinition Height="*"/>
                <!-- arbejdsflade -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Margin="24,24,24,12" BorderBrush="Blue" BorderThickness="1" CornerRadius="8">
                <TextBlock Text="Velkommen til Reolmarkedet"
                           Padding="20" FontSize="18" FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Værktøjsbjælke (knapper uden funktion) -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="24,0,24,12">
                <Button Content="Opret manuelt" Margin="0,0,8,0" Padding="10,6" IsEnabled="False" Click="Button_Click"/>
                <Button Content="Importér CSV"  Margin="0,0,8,0" Padding="10,6" IsEnabled="False"/>
            </StackPanel>

            <!-- Tom arbejdsflade (her kan dialoger poppe op senere) -->
            <Border Grid.Row="2" Margin="24" BorderBrush="Blue" BorderThickness="1" CornerRadius="6" Background="WhiteSmoke"/>
        </Grid>
    </Grid>
</UserControl>
